---
 meta-measured/recipes-tpm/tpm2.0-tss/tpm2.0-tss_git.bb | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/meta-measured/recipes-tpm/tpm2.0-tss/tpm2.0-tss_git.bb b/meta-measured/recipes-tpm/tpm2.0-tss/tpm2.0-tss_git.bb
index 53ac1a0..70019aa 100644
--- a/meta-measured/recipes-tpm/tpm2.0-tss/tpm2.0-tss_git.bb
+++ b/meta-measured/recipes-tpm/tpm2.0-tss/tpm2.0-tss_git.bb
@@ -13,15 +13,15 @@ LIC_FILES_CHKSUM = "file://${COREBASE}/meta/files/common-licenses/BSD;md5=377548
 # it's fixed upstream.
 DEPENDS = "autoconf-archive"
 
-SRC_URI = "git://github.com/01org/TPM2.0-TSS.git;protocol=git;branch=master;name=TPM2.0-TSS;destsuffix=TPM2.0-TSS"
